<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MeasurementActivity" android:id="@+id/Maker">
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/stepCountTextView"
            app:layout_constraintBottom_toTopOf="@+id/PauseButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.745" android:textStyle="bold" android:textSize="60sp"
            android:textAlignment="center"/>
    <Button
            android:text="STOP"
            android:layout_width="350dp"
            android:layout_height="50dp" android:id="@+id/StopButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="250dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintVertical_bias="1.0" android:textStyle="bold" android:textSize="24sp"/>
    <Button
            android:text="PAUSE"
            android:layout_width="350dp"
            android:layout_height="50dp" android:id="@+id/PauseButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintVertical_bias="1.0" android:layout_marginBottom="310dp" android:textStyle="bold"
            android:textSize="24sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/timerTextView"
            app:layout_constraintBottom_toTopOf="@+id/PauseButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.298" android:textStyle="bold" android:textSize="60sp"
            android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>


